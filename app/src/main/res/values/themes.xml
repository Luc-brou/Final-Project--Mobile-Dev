<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Halifax Transit custom theme using Material3 -->
    <style name="Theme.HalifaxTransit" parent="Theme.Material3.Light.NoActionBar">
        <!-- Override with your Coolors palette -->
        <item name="colorPrimary">@color/mint_leaf</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/light_green</item>
        <item name="colorOnSecondary">@color/regal_navy</item>

        <item name="colorTertiary">@color/verdigris</item>
        <item name="colorOnTertiary">@color/white</item>

        <item name="android:colorBackground">@color/frosted_mint</item>
        <item name="colorOnBackground">@color/regal_navy</item>

        <item name="colorSurface">@color/frosted_mint</item>
        <item name="colorOnSurface">@color/regal_navy</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.HalifaxTransit.Splash" parent="Theme.SplashScreen">
        <!-- Background color -->
        <item name="android:windowSplashScreenBackground">@color/regal_navy</item>

        <!-- Animated icon (use adaptive icon or AnimatedVectorDrawable) -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/bus</item>

        <!-- Duration of icon animation -->
        <item name="android:windowSplashScreenAnimationDuration">800</item>

        <!-- Transition to main theme -->
        <item name="postSplashScreenTheme">@style/Theme.HalifaxTransit</item>
    </style>


</resources>